{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "msbuild",
                "DesktopMinidamWorking.sln",
                "/p:Configuration=Debug",
                "/p:Platform=AnyCPU",
                "/t:Build",
                "/v:minimal"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$msCompile",
            "presentation": {
                "reveal": "silent",
                "panel": "shared"
            }
        },
        {
            "label": "build-release",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "msbuild",
                "DesktopMinidamWorking.sln",
                "/p:Configuration=Release",
                "/p:Platform=AnyCPU",
                "/t:Build",
                "/v:minimal"
            ],
            "group": "build",
            "problemMatcher": "$msCompile",
            "presentation": {
                "reveal": "silent",
                "panel": "shared"
            }
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "msbuild",
                "DesktopMinidamWorking.sln",
                "/t:Clean",
                "/v:minimal"
            ],
            "group": "build",
            "problemMatcher": "$msCompile"
        }
    ]
}

